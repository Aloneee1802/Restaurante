<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductoControlador</servlet-name>
        <servlet-class>controlador.ProductoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteControlador</servlet-name>
        <servlet-class>controlador.ClienteControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthControlador</servlet-name>
        <servlet-class>controlador.AuthControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuControlador</servlet-name>
        <servlet-class>controlador.MenuControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoControlador</servlet-name>
        <servlet-class>controlador.CarritoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VentaControlador</servlet-name>
        <servlet-class>controlador.VentaControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioControlador</servlet-name>
        <servlet-class>controlador.InicioControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransacionControlador</servlet-name>
        <servlet-class>controlador.TransacionControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoControlador</servlet-name>
        <url-pattern>/Producto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteControlador</servlet-name>
        <url-pattern>/Cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthControlador</servlet-name>
        <url-pattern>/Auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuControlador</servlet-name>
        <url-pattern>/Menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoControlador</servlet-name>
        <url-pattern>/Carrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VentaControlador</servlet-name>
        <url-pattern>/Venta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioControlador</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransacionControlador</servlet-name>
        <url-pattern>/Transacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
